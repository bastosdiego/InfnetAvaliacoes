@model Avaliacoes.Web.Models.LoginViewModel

@{
    ViewBag.Title = "Log in";
    ViewBag.NoNavBar = true;
    ViewBag.NoFooter = true;
}

<div class="container">
    <div class="row">
        <div class="col-sm-6 col-md-4 col-md-offset-4">
            <div class="account-wall">
                <img class="profile-img" src="http://pmirio.org.br/gpsinrio/wp-content/uploads/2013/11/infnet2.png"
                     alt="">
                <form class="form-signin">
                    <input type="text" class="form-control" placeholder="Email" required autofocus>
                    <input type="password" class="form-control" placeholder="Senha" required>
                    <button style="width:280px" class="btn btn-lg btn-primary btn-block" type="submit">
                        Fazer login
                    </button>
                    <label class="checkbox pull-left">
                        <input type="checkbox" value="remember-me">
                        Continuar conectado
                    </label>
                    <span class="clearfix"></span>
                </form>
            </div>
            <a href="#" class="text-center new-account">Criar uma conta</a>
        </div>
    </div>
</div>

